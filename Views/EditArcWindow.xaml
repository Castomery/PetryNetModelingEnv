<Window x:Class="PetryNet.Views.EditArcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetryNet.Views"
        mc:Ignorable="d"
        Title="EditArcWindow" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Weight:" Margin="0 0 0 5" />
            <TextBox Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="OK" HorizontalAlignment="Right" Margin="0 10 0 0" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
