<Window x:Class="PetryNet.Views.InvariantAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetryNet.Views"
        mc:Ignorable="d"
        Title="InvariantAnalysisWindow" Height="450" Width="800">
    <Window.Resources>
        
        <Style x:Key="StatusTextBlock" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Properties Section -->
        <GroupBox Header="Динамічні властивості" Grid.Row="0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Повторюваність:" Style="{StaticResource StatusTextBlock}" Grid.Row="0" Grid.Column="0"/>
                <TextBlock Text="{Binding RepetitionStatus}" Style="{StaticResource StatusTextBlock}" Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Обмеженість:" Style="{StaticResource StatusTextBlock}" Grid.Row="1" Grid.Column="0"/>
                <TextBlock Text="{Binding BoundednessStatus}" Style="{StaticResource StatusTextBlock}" Grid.Row="1" Grid.Column="1"/>

                <TextBlock Text="Живість:" Style="{StaticResource StatusTextBlock}" Grid.Row="2" Grid.Column="0"/>
                <TextBlock Text="{Binding LivenessStatus}" Style="{StaticResource StatusTextBlock}" Grid.Row="2" Grid.Column="1"/>

                <TextBlock Text="Збереженість:" Style="{StaticResource StatusTextBlock}" Grid.Row="3" Grid.Column="0"/>
                <TextBlock Text="{Binding ConservativenessStatus}" Style="{StaticResource StatusTextBlock}" Grid.Row="3" Grid.Column="1"/>

                <TextBlock Text="Бездогладність:" Style="{StaticResource StatusTextBlock}" Grid.Row="4" Grid.Column="0"/>
                <TextBlock Text="{Binding DeadlockFreeStatus}" Style="{StaticResource StatusTextBlock}" Grid.Row="4" Grid.Column="1"/>

                <TextBlock Text="Керованість:" Style="{StaticResource StatusTextBlock}" Grid.Row="5" Grid.Column="0"/>
                <TextBlock Text="{Binding ControllabilityStatus}" Style="{StaticResource StatusTextBlock}" Grid.Row="5" Grid.Column="1"/>
            </Grid>
        </GroupBox>

        <!-- Invariants Section -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Інваріанти" FontWeight="Bold" FontSize="16" Margin="0,10"/>

                <!-- T-Invariants -->
                <Grid Margin="0,10,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="t = " VerticalAlignment="Center" Margin="0,0,5,0"/>

                    <!-- Data Row -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding TInvariants}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <!-- Name Cell (highlighted blue) -->
                                    <Border Background="#0078D7" BorderBrush="Black" BorderThickness="1" Width="40" Height="30" Margin="0">
                                        <TextBlock Text="{Binding Name}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Vector Values -->
                                    <ItemsControl ItemsSource="{Binding Vector}" Margin="0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="Black" BorderThickness="0,1,1,1" Width="40" Height="30" Margin="0">
                                                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!-- P-Invariants -->
                <Grid Margin="0,20,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Grid.Row="0" Text="p = " VerticalAlignment="Center" Margin="0,0,5,0"/>

                    <!-- Data Row -->
                    <ItemsControl Grid.Row="1" ItemsSource="{Binding PInvariants}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0">
                                    <!-- Name Cell (highlighted blue) -->
                                    <Border Background="#0078D7" BorderBrush="Black" BorderThickness="1" Width="40" Height="30" Margin="0">
                                        <TextBlock Text="{Binding Name}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Vector Values -->
                                    <ItemsControl ItemsSource="{Binding Vector}" Margin="0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="0"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="Margin" Value="0"/>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="Black" BorderThickness="0,1,1,1" Width="40" Height="30" Margin="0">
                                                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
