<Window x:Class="PetryNet.Views.PatternSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetryNet.Views"
        mc:Ignorable="d"
        Title="PatternSelectionWindow" Height="450" Width="800">
    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Patterns}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button 
                    Command="{Binding DataContext.SelectPatternCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}"
                    Padding="0"
                    Margin="10"
                    BorderThickness="1"
                    BorderBrush="LightGray"
                    Background="White">

                        <StackPanel Width="200" Height="240">
                            <Image Source="{Binding PreviewImagePath}" 
                               Width="200" Height="200" 
                               Stretch="Uniform"/>

                            <TextBlock Text="{Binding Name}" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   Foreground="Black"
                                   FontWeight="SemiBold"
                                   Margin="5,5,5,0"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</Window>
