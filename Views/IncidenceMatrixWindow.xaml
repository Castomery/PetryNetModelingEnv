<Window x:Class="PetryNet.Views.IncidenceMatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetryNet.Views"
        mc:Ignorable="d"
        Title="IncidenceMatrixWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- Style for centered cells -->
        <Style x:Key="CenteredCellStyle" TargetType="DataGridCell">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        </Style>

        <!-- Style for centered column headers -->
        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Reusable DataGrid style -->
        <Style x:Key="MatrixDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="ColumnWidth" Value="*"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="CellStyle" Value="{StaticResource CenteredCellStyle}"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource CenteredHeaderStyle}"/>
            <Setter Property="FontSize" Value="14"/>
            <!-- Larger font size -->
            <Setter Property="FontWeight" Value="Bold"/>
            <!-- Bold font -->
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <ScrollViewer>

            <StackPanel>
                <!-- Forward Matrix -->
                <TextBlock Text="Forward Matrix (f⁺)" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,5"/>
                <DataGrid x:Name="ForwardMatrixGrid" ItemsSource="{Binding ForwardMatrix}" Style="{StaticResource MatrixDataGridStyle}"/>

                <!-- Backward Matrix -->
                <TextBlock Text="Backward Matrix (f⁻)" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,5"/>
                <DataGrid x:Name="BackwardMatrixGrid" ItemsSource="{Binding BackwardMatrix}" Style="{StaticResource MatrixDataGridStyle}"/>

                <!-- Combined Matrix -->
                <TextBlock Text="Combined Matrix (I)" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,5"/>
                <DataGrid x:Name="CombinedMatrixGrid"  ItemsSource="{Binding CombinedMatrix}" 
                      Style="{StaticResource MatrixDataGridStyle}" 
                      Margin="0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
